{
  "name": "task-manager",
  "version": "1.0.0",
  "description": "Just a practice backend server project to play around with some cool Node.js features.",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production pm2 start ecosystem.config.js --no-daemon",
    "dev": "cross-env NODE_ENV=development nodemon src/index.js",
    "test": "cross-env NODE_ENV=test mocha src/tests --recursive --exit",
    "test:unit": "cross-env NODE_ENV=test mocha src/tests/unit --recursive --watch",
    "test:integration": "cross-env NODE_ENV=test mocha src/tests/integration --recursive --watch",
    "test:watch": "cross-env NODE_ENV=test mocha src/tests --recursive --watch",
    "test:coverage": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha src/tests --recursive --exit ",
    "report": "cross-env NODE_ENV=test nyc --reporter=lcovonly mocha src/tests --recursive --exit && cat ./coverage/lcov.info | env-cmd codacy-coverage && rm -rf ./coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check src/**/*.js",
    "format:fix": "prettier --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hagopj13/task-manager-nodejs.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hagopj13/task-manager-nodejs/issues"
  },
  "homepage": "https://github.com/hagopj13/task-manager-nodejs#readme",
  "dependencies": {
    "@hapi/joi": "^15.1.1",
    "bcryptjs": "^2.4.3",
    "boom": "^7.3.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^5.2.0",
    "dotenv-safe": "^6.1.0",
    "express": "^4.17.1",
    "helmet": "^3.20.0",
    "http-status": "^1.3.2",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "mongoose": "^5.6.9",
    "morgan": "^1.9.1",
    "pm2": "^3.5.1",
    "prettier": "^1.18.2",
    "validator": "^11.1.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "chai": "^4.2.0",
    "codacy-coverage": "^3.4.0",
    "env-cmd": "^9.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-chai-friendly": "^0.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "mocha": "^6.2.0",
    "node-mocks-http": "^1.7.6",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "rewire": "^4.0.1",
    "sinon": "^7.4.1",
    "supertest": "^4.0.2"
  }
}
